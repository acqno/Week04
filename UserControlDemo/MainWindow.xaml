<Window x:Class="UserControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <TabControl>
        <TabItem Header="Login Control">
            <StackPanel Background="Pink">
                <Label Content="Demonstration of a login control"/>
                <local:uCtrlLoginDemo/>

            </StackPanel>
        </TabItem>

        <TabItem Header="Car Inventory">
            <WrapPanel x:Name="uiInventory" HorizontalAlignment="Stretch" Background="#76B295">

            </WrapPanel>
        </TabItem>

    </TabControl>
</Window>
